<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tesis.restapp.restapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name="com.tesis.restapp.restapp.activities.intro.IntroActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tesis.restapp.restapp.activities.main.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name="com.tesis.restapp.restapp.activities.search.SearchActivity"
            android:label="@string/title_activity_search"
            android:parentActivityName="com.tesis.restapp.restapp.activities.main.OrderActivity" >

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tesis.restapp.restapp.activities.main.OrderActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.tesis.restapp.restapp.activities.search.ItemsActivity"
            android:label="Search item" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.main.OrderActivity"
            android:label="@string/title_activity_order"
            android:parentActivityName="com.tesis.restapp.restapp.activities.main.MainActivity"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tesis.restapp.restapp.activities.main.MainActivity" />
        </activity>
    </application>

</manifest>
