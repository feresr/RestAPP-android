<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@drawable/food_wallpaper_dashboard"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="25sp">

        <ImageView
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:layout_gravity="center"
            android:layout_margin="15sp"
            android:background="@drawable/waiter_icon" />

        <TextView
            android:id="@+id/firstLastNameTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/waiter_name_sample"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/usernameTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/waiter_username_sample"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:paddingTop="15sp"
            android:paddingLeft="20sp"
            android:textStyle="bold"
            android:textColor="@color/dark_white"
            android:text="MIS Ã“RDENES"/>

    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">

        <ListView
            android:id="@+id/orders_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#111"
            android:divider="#222"
            android:dividerHeight="1dp" />

        <TextView
            android:id="@android:id/empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#111"
            android:gravity="center"
            android:text="Sin ordenes"
            android:textColor="@color/dark_white" />

        <Button
            android:id="@+id/neworder_btn"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_gravity="right|bottom"
            android:layout_margin="20sp"
            android:background="@drawable/fab"

            android:textColor="@color/white"
            android:textSize="20sp" />

    </FrameLayout>

</LinearLayout>

